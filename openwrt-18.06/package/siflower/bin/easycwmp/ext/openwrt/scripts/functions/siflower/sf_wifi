	return 0
}

wifi_get_ModesSupported() {
	echo "None,WEP-64,WEP-128,WPA-Personal,WPA2-Personal,WPA-WPA2-Personal,WPA-Enterprise,WPA2-Enterprise,WPA-WPA2-Enterprise"
}

wifi_get_ModeEnabled() {
	local key
	local encryption=`$UCI_GET $1.encryption`

	case "$encryption" in
		"psk2"*)
			echo "WPA2-Personal"
			;;
		"psk-mixed"*)
			echo "WPA-WPA2-Personal"
			;;
		"psk"*)
			echo "WPA-Personal"
			;;
		"wpa2"*)
			echo "WPA2-Enterprise"
			;;
		"wpa-mixed"*)
			echo "WPA-WPA2-Enterprise"
			;;
		"wpa"*)
			echo "WPA-Enterprise"
			;;
		"wep"*)
			key=`$UCI_GET $1.key`
			[ "$key" = "1" -o "$key" = "2" -o "$key" = "3" -o "$key" = "4" ] && key=`$UCI_GET $1.key$key`
			[ ${#key} = "26" ] && echo "WEP-128" || echo "WEP-64"
			;;
		*)
			echo "None"
			;;
	esac
}

wifi_set_ModeEnabled() {
	local key
	local encryption=`wifi_get_ModeEnabled $1`
	[ "$encryption" = "$2" ] && return 0

	case "$2" in
		"WPA2-Personal")
			$UCI_SET $1.encryption="psk2"
			;;
		"WPA-WPA2-Personal")
			$UCI_SET $1.encryption="psk-mixed"
			;;
		"WPA-Personal")
			$UCI_SET $1.encryption="psk"
			;;
		"WPA2-Enterprise")
			$UCI_SET $1.encryption="wpa2"
			;;
		"WPA-WPA2-Enterprise")
			$UCI_SET $1.encryption="wpa-mixed"
			;;
		"WPA-Enterprise")
			$UCI_SET $1.encryption="wpa"
			$UCI_SET $1.key1=
			;;
		"WEP-64")
			$UCI_SET $1.encryption=wep
			$UCI_SET $1.key=1
			$UCI_SET $1.key1="0123456789012"
			;;
		"WEP-128")
			$UCI_SET $1.encryption=wep
			$UCI_SET $1.key=1
			$UCI_SET $1.key1="01234567890123456789012345"
			;;
		"None")
			$UCI_SET $1.encryption=
			$UCI_SET $1.key=
			;;
	esac

	if [ "$2" != "WEP-64" -a "$2" != "WEP-128" ];then
		$UCI_SET $1.key1=
	fi
	return 0
}

wifi_get_secret() {
	return 0
}

wifi_get_WEPKey() {
	local key=`$UCI_GET $1.key1`
	echo "$key"
}

wifi_get_KeyPassphrase() {
	local key=`$UCI_GET $1.key`

	echo "$key"
}

wifi_set_WEPKey() {
	$UCI_SET $1.key=1
	$UCI_SET $1.key1=$2
	return 0
}

wifi_set_PreSharedKey() {
	$UCI_SET $1.key=$2
	return 0
}

wifi_set_KeyPassphrase() {
	$UCI_SET $1.key=$2
	return 0
}

