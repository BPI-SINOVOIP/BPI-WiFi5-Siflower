#!/bin/sh

. /lib/functions.sh

iface=$1
new_state=$2
find=0

check_iface_in_dhcp()
{
    local interface ignore

    config_get interface "$1" interface
    config_get_bool ignore "$1" ignore 0

    if [ -n "$interface" -a $ignore -eq 0 -a "$interface" = "$2" ]; then
        find=1
    fi
}

if [ "${new_state}" = "connectivity" ]; then
    config_load dhcp
    config_foreach check_iface_in_dhcp dhcp "$iface"

    if [ "$find" = "1" ]; then
        num=$(ps | grep '/usr/sbin/dnsmasq' | grep -v grep -c)
        # echo "***1. num is $num" >/dev/console
        if [ "$num" = "2" ]; then
            # echo "dnsmasq starts normally" >/dev/console
        else
            /etc/init.d/dnsmasq reload
        fi
    fi
fi